<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <!-- Your existing content goes here -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Your Header Layout -->
            <RelativeLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Menu"
                    android:onClick="openDrawer"
                    android:src="@drawable/baseline_menu_24"
                    tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:layout_toStartOf="@id/cartButton"
                android:layout_toEndOf="@id/menuButton"
                android:text="BuyIn &amp; SellOut"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/cartButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="Add to Cart"
                    android:src="@drawable/baseline_shopping_cart_24"
                    tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>

        <!-- Your ViewPager for Carousel -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/headerLayout"
            android:layout_marginTop="8dp"/>

        <!-- "Shop here" label -->
        <TextView
            android:id="@+id/shopHereLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
           android:layout_marginLeft="10dp"
            android:paddingBottom="15dp"
            android:text="Shop here"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

            <!-- Product RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <!-- "Categories" label -->
        <TextView
            android:id="@+id/categoriesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginLeft="10dp"
            android:text="Categories"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <!-- Male Category -->
        <LinearLayout
            android:id="@+id/maleCategory"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@drawable/category_male_background"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEN"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <!-- Female Category -->
        <LinearLayout
            android:id="@+id/femaleCategory"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@drawable/category_female_background"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WOMEN"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <!-- Kids Category -->
        <LinearLayout
            android:id="@+id/kidsCategory"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@drawable/category_kids_background"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KIDS"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

    <!-- NavigationView for the drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
